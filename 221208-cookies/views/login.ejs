<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script>
        function login(){
            var form = document.getElementById("form");
            let user = {
                    id: form.id.value,
                    pw: form.pw.value
                };
            axios({
                    method : "get", //쿠키를 생성(post는 생성하는 기능)하기 위해 post
                    url: "/login",
                    data : user
                }).then((response)=>{
                    user.id = form.id.value;
                });
        }
    </script>
</head>
<body>
    <form action="/profile" id="form" align="center">
        Login <br>
        ID <br>
        <input type="text" name="id"> <br>
        PASSWORD <br>
        <input type="text" name="pw"> <br>
        <button onclick="login();">로그인</button>
    </form>
</body>
</html>